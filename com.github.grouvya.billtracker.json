{
    "app-id": "com.github.grouvya.billtracker",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "main.py",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--filesystem=home",
        "--share=network"
    ],
    "build-options": {
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "tcl",
            "buildsystem": "simple",
            "build-commands": [
                "cd unix && ./configure --prefix=/app --enable-threads",
                "make -C unix",
                "make -C unix install"
            ],
            "post-install": [
                "chmod +w /app/lib/libtcl8.6.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://prdownloads.sourceforge.net/tcl/tcl8.6.14-src.tar.gz",
                    "sha256": "5880225babf7954c58d4fb0f5cf6279104ce1cd6aa9b71e9a6322540e1c4de66"
                }
            ]
        },
        {
            "name": "tk",
            "buildsystem": "simple",
            "build-commands": [
                "cd unix && ./configure --prefix=/app --with-tcl=/app/lib",
                "make -C unix",
                "make -C unix install"
            ],
            "post-install": [
                "chmod +w /app/lib/libtk8.6.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://prdownloads.sourceforge.net/tcl/tk8.6.14-src.tar.gz",
                    "sha256": "8ffdb720f47a6ca6107eac2dd877e30b0ef7fac14f3a84ebbd0b3612cee41a94"
                }
            ]
        },
        {
            "name": "python3",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.python.org/ftp/python/3.12.3/Python-3.12.3.tgz",
                    "sha256": "a6b9459f45a6ebbbc1af44f5762623fa355a0c87208ed417628b379d762dddb0"
                }
            ],
            "config-opts": [
                "--prefix=/app",
                "--with-ensurepip=install"
            ]
        },
        {
            "name": "python-dependencies",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app -r requirements.txt"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "requirements.txt"
                }
            ]
        },
        {
            "name": "billtracker",
            "buildsystem": "simple",
            "build-commands": [
                "install -D -t /app/bin main.py",
                "install -D -t /app/lib app.py"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grouvya/billtracker.git",
                    "branch": "main"
                }
            ]
        }
    ]
}
